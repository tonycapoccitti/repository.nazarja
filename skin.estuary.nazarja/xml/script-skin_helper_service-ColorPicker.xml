<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <include>Animation_DialogPopupOpenClose</include>
    <controls>
        <control type="group">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>1682</width>
            <height>728</height>
            <include content="DialogBackgroundCommons">
                <param name="width" value="1682" />
                <param name="height" value="728" />
                <param name="header_label" value="$LOCALIZE[40022]" />
                <param name="header_id" value="" />
            </include>
            <control type="image">
                <posy>84</posy>
                <posx>667</posx>
                <width>48</width>
                <height>24</height>
                <texture flipy="true" colordiffuse="button_focus">overlays/arrowdown.png</texture>
                <animation effect="zoom" start="0,100" end="100,100" center="auto" time="200">VisibleChange</animation>
                <animation effect="zoom" start="0,100" end="100,100" delay="500" center="auto" time="200">WindowOpen</animation>
                <animation effect="zoom" start="100,100" end="0,100" center="auto" time="200">WindowClose</animation>
                <visible>Container(3110).HasPrevious</visible>
            </control>
            <control type="image">
                <posy>690</posy>
                <posx>667</posx>
                <width>48</width>
                <height>24</height>
                <texture colordiffuse="button_focus">overlays/arrowdown.png</texture>
                <animation effect="zoom" start="0,100" end="100,100" center="auto" time="200">VisibleChange</animation>
                <animation effect="zoom" start="0,100" end="100,100" delay="500" center="auto" time="200">WindowOpen</animation>
                <animation effect="zoom" start="100,100" end="0,100" center="auto" time="200">WindowClose</animation>
                <visible>Container(3110).HasNext</visible>
            </control>
            <control type="panel" id="3110">
                <posx>61</posx>
                <posy>130</posy>
                <width>1260</width>
                <height>540</height>
                <orientation>vertical</orientation>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <onup>3110</onup>
                <ondown>3110</ondown>
                <preloaditems>4</preloaditems>
                <itemlayout height="60" width="90">
                    <control type="image">
                        <posx>4</posx>
                        <posy>4</posy>
                        <width>82</width>
                        <height>52</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                    </control>
                </itemlayout>
                <focusedlayout height="60" width="90">
                    <control type="group">
                        <animation effect="zoom" time="300" tween="sine" easing="inout" start="100" end="164" center="auto">Focus</animation>
                        <control type="image">
                            <width>90</width>
                            <height>60</height>
                            <texture colordiffuse="ff242424" border="5">colors/white.png</texture>
                        </control>
                        <control type="image">
                            <posx>4</posx>
                            <posy>4</posy>
                            <width>82</width>
                            <height>52</height>
                            <texture>$INFO[ListItem.Icon]</texture>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="grouplist" id="9000">
                <orientation>vertical</orientation>
                <itemgap>26</itemgap>
                <left>1340</left>
                <top>114</top>
                <height>1302</height>
                <onleft>3110</onleft>
				<!-- color preview-->
				<control type="group">
					<top>-60</top>
                    <control type="image">
                        <posx>20</posx>
                        <width>260</width>
                        <height>70</height>
                        <texture colordiffuse="ff171717">colors/white.png</texture>
                    </control>
                    <control type="image">
                        <top>10</top>
                        <left>30</left>
                        <width>240</width>
                        <height>50</height>
                        <texture colordiffuse="$INFO[Window.Property(colorstring)]">colors/white.png</texture>
                    </control>
                </control>
                <!-- edit manual -->
                <control type="button" id="3010">
                    <width>300</width>
                    <height>90</height>
                    <align>center</align>
                    <textoffsetx>20</textoffsetx>
                    <font>font25_title</font>
                    <wrapmultiline>false</wrapmultiline>
                    <label>$LOCALIZE[40023] : $INFO[Window.Property(colorstring)]</label>
                    <texturefocus border="40" colordiffuse="button_focus">buttons/dialogbutton-fo.png</texturefocus>
                    <texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
                    <visible>!String.IsEmpty(Window.Property(palettename))</visible>
                </control>
                <!-- Save button -->
                <control type="button" id="3012">
                    <width>300</width>
                    <height>90</height>
                    <align>center</align>
                    <textoffsetx>20</textoffsetx>
                    <font>font25_title</font>
                    <wrapmultiline>false</wrapmultiline>
                    <label>190</label>
                    <texturefocus border="40" colordiffuse="button_focus">buttons/dialogbutton-fo.png</texturefocus>
                    <texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
                    <visible>!String.IsEmpty(Window.Property(palettename))</visible>
                </control>
                <!-- Cancel -->
                <control type="button" id="3090">
                    <width>300</width>
                    <height>90</height>
                    <align>center</align>
                    <textoffsetx>20</textoffsetx>
                    <font>font25_title</font>
                    <wrapmultiline>false</wrapmultiline>
                    <label>222</label>
                    <onclick>Dialog.Close(all)</onclick>
                    <texturefocus border="40" colordiffuse="button_focus">buttons/dialogbutton-fo.png</texturefocus>
                    <texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
                    <visible>!String.IsEmpty(Window.Property(palettename))</visible>
                </control>
                <control type="button" id="3030">
                    <width>300</width>
                    <height>110</height>
                    <align>center</align>
                    <textoffsetx>20</textoffsetx>
                    <font>font25_title</font>
                    <wrapmultiline>false</wrapmultiline>
                    <label>$ADDON[script.skin.helper.colorpicker 32141][CR][UPPERCASE]$INFO[Window.Property(palettename)][/UPPERCASE]</label>
                    <texturefocus border="40" colordiffuse="button_focus">buttons/dialogbutton-fo.png</texturefocus>
                    <texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
                    <visible>!String.IsEmpty(Window.Property(palettename))</visible>
                </control>
                <control type="slider" id="3015">
					<visible>false</visible>
				</control>
				<control type="group" id="3020">
				<left>1400</left>
				<top>20</top>
				<width>500</width>
				<!-- Opacity label + Slider -->
				<control type="label" id="3016">
					<top>-15</top>
					<width>120</width>
					<height>50</height>
					<label>$ADDON[script.skin.helper.colorpicker 32049]:</label>
					<textcolor>white</textcolor>
				</control>
				<control type="slider" id="3015">
					<left>130</left>
					<top>-10</top>
					<onup>3030</onup>
					<ondown>3012</ondown>
					<width>180</width>
					<height>30</height>
					<texturesliderbar>dialogs/osd_slider_bg_2.png</texturesliderbar>
					<textureslidernib>dialogs/osd_slider_nibNF.png</textureslidernib>
					<textureslidernibfocus>dialogs/osd_slider_nib.png</textureslidernibfocus>
				</control>
				<control type="label" id="3017">
					<left>380</left>
					<height>60</height>
					<label>$INFO[Control.Getlabel(3015)]</label>
					<textcolor>white</textcolor>
				</control>
			</control>
                
                
            </control>
        </control>
    </controls>
</window>