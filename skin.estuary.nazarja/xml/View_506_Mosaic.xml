<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_506_Mosaic">
		<control type="group">
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(506)</visible>
			<include>Visible_Right</include>
			<left>-20</left>
			<right>0</right>
			<top>85</top>
			<animation effect="slide" end=",-10" time="0" condition="Container.Content(images) | Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)">Conditional</animation>
			<control type="panel" id="506">
				<width>100%</width>
				<top>20</top>
				<height>950</height>
				<oninfo condition="String.IsEqual(ListItem.DBType,set)">ActivateWindow(1132)</oninfo>
				<onup condition="!Skin.HasSetting(KioskMode)">9000</onup>
				<onright>506</onright>
				<onleft>506</onleft>
				<ondown>5199</ondown>
				<viewtype label="Small Posters (Wide)">icon</viewtype>
				<preloaditems>2</preloaditems>
				<pagecontrol>5199</pagecontrol>
				<orientation>horizontal</orientation>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<visible>Container.Content(images) | Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(artists) | Container.Content(albums) | Container.Content(musicvideos)</visible>
				<itemlayout height="180" width="280" condition="Container.Content(images)">
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>310</width>
						<height>210</height>
						<texture fallback="DefaultPicture.png" background="true">$VAR[ShiftThumbVar]</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
						<aspectratio>scale</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="180" width="280" condition="Container.Content(images)">
					<control type="image">
						<left>20</left>
						<top>20</top>
						<width>290</width>
						<height>190</height>
						<texture colordiffuse="button_focus">colors/white.png</texture>
					</control>
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>310</width>
						<height>210</height>
						<texture fallback="DefaultPicture.png" background="true">$VAR[ShiftThumbVar]</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
						<aspectratio>scale</aspectratio>
					</control>
				</focusedlayout>
				<itemlayout height="300" width="300" condition="Container.Content(artists) | Container.Content(albums) | Container.Content(musicvideos)">
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>330</width>
						<height>330</height>
						<texture fallback="DefaultAudio.png" background="true">$VAR[ShiftThumbVar]</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
						<aspectratio>scale</aspectratio>
						<visible>!Container.Content(addons)</visible>
					</control>
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>330</width>
						<height>330</height>
						<texture fallback="DefaultAddon.png" background="true">$VAR[ShiftThumbVar]</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
						<aspectratio>scale</aspectratio>
						<visible>Container.Content(addons)</visible>
					</control>
					<control type="image">
						<left>30</left>
						<top>30</top>
						<width>290</width>
						<height>290</height>
						<texture background="true" colordiffuse="BFFFFFFF">colors/black.png</texture>
						<aspectratio>scale</aspectratio>
						<visible>!Container.Content(addons)</visible>
						<visible>Skin.HasSetting(greyedout_watched) + Integer.IsGreater(ListItem.Playcount,0) + Container.Content(musicvideos)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="300" condition="Container.Content(artists) | Container.Content(albums) | Container.Content(musicvideos)">
					<control type="image">
						<left>20</left>
						<top>20</top>
						<width>310</width>
						<height>310</height>
						<texture colordiffuse="button_focus">colors/white.png</texture>
					</control>
					<control type="group">
						<control type="image">
							<left>10</left>
							<top>10</top>
							<width>330</width>
							<height>330</height>
							<texture fallback="DefaultAudio.png" background="true">$VAR[ShiftThumbVar]</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
							<aspectratio>scale</aspectratio>
							<visible>!Container.Content(addons)</visible>
						</control>
							<control type="image">
							<left>10</left>
							<top>10</top>
							<width>330</width>
							<height>330</height>
							<texture fallback="DefaultAddon.png" background="true">$VAR[ShiftThumbVar]</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
							<aspectratio>scale</aspectratio>
							<visible>Container.Content(addons)</visible>
						</control>
						<control type="group">
							<left>30</left>
							<top>275</top>
							<control type="image">
								<width>290</width>
								<height>45</height>
								<texture>dialogs/back.png</texture>
							</control>
							<control type="label">
								<left>10</left>
								<width>270</width>
								<height>45</height>
								<align>center</align>
								<aligny>center</aligny>
								<font>font12</font>
								<label>$INFO[ListItem.Label]</label>
								<scroll>true</scroll>
								<visible>!Container.Content(albums)</visible>
							</control>
							<control type="label">
								<left>10</left>
								<width>270</width>
								<height>45</height>
								<align>center</align>
								<aligny>center</aligny>
								<font>font12</font>
								<label>$INFO[ListItem.Artist,, - ]$INFO[ListItem.Label]</label>
								<scroll>true</scroll>
								<visible>Container.Content(albums)</visible>
							</control>
						</control>
					</control>
				</focusedlayout>
				<itemlayout height="300" width="210" condition="Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)">
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>240</width>
						<height>330</height>
						<texture fallback="DefaultVideo.png" background="true">$VAR[ShiftThumbVar]</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<left>30</left>
						<top>250</top>
						<width>70</width>
						<height>70</height>
						<texture>overlays/overlay-bg.png</texture>
						<visible>ListItem.IsResumable | Listitem.IsCollection | ListItem.IsPlaying | Integer.IsGreater(ListItem.Playcount,0)</visible>
					</control>
					<control type="image">
						<left>30</left>
						<top>290</top>
						<width>28</width>
						<height>28</height>
						<texture>$VAR[WallWatchedIconVar]</texture>
					</control>
					<control type="image">
						<left>25</left>
						<top>25</top>
						<width>210</width>
						<height>300</height>
						<texture background="true" colordiffuse="BFFFFFFF">colors/black.png</texture>
						<aspectratio>scale</aspectratio>
						<visible>Skin.HasSetting(greyedout_watched) + Integer.IsGreater(ListItem.Playcount,0)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="210" condition="Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)">
					<control type="image">
						<left>25</left>
						<top>25</top>
						<width>210</width>
						<height>300</height>
						<texture colordiffuse="button_focus">colors/white.png</texture>
						<animation effect="zoom" start="100" end="110" time="110" tween="sine" easing="inout" center="50,100">Focus</animation>
					</control>
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>240</width>
						<height>330</height>
						<texture fallback="DefaultVideo.png" background="true">$VAR[ShiftThumbVar]</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
						<aspectratio>scale</aspectratio>
						<animation effect="zoom" start="100" end="110" time="110" tween="sine" easing="inout" center="50,100">Focus</animation>
					</control>
					<control type="image">
						<left>30</left>
						<top>250</top>
						<width>70</width>
						<height>70</height>
						<texture>overlays/overlay-bg.png</texture>
						<visible>ListItem.IsResumable | Listitem.IsCollection | ListItem.IsPlaying | Integer.IsGreater(ListItem.Playcount,0)</visible>
						<animation effect="zoom" start="100" end="110" time="110" tween="sine" easing="inout" center="50,100">Focus</animation>
					</control>
					<control type="image">
						<left>30</left>
						<top>290</top>
						<width>28</width>
						<height>28</height>
						<texture>$VAR[WallWatchedIconVar]</texture>
						<animation effect="zoom" start="100" end="110" time="110" tween="sine" easing="inout" center="50,100">Focus</animation>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>