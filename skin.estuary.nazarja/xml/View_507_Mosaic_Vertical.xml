							<bordersize>20</bordersize>
							<aspectratio>scale</aspectratio>
						</control>
					</control>
				</focusedlayout>
				<itemlayout height="225" width="225" condition="Container.Content(artists) | Container.Content(albums) | Container.Content(musicvideos)">
