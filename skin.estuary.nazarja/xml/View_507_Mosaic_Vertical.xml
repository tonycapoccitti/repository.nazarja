						<left>5</left>
						<control type="image">
							<left>20</left>
							<top>20</top>
							<width>386</width>
							<height>235</height>
							<texture colordiffuse="button_focus">colors/white.png</texture>
						</control>
						<control type="image">
							<left>10</left>
							<top>10</top>
							<width>406</width>
							<height>255</height>
							<texture fallback="DefaultPicture.png" background="true">$VAR[ShiftThumbVar]</texture>
