						<left>45</left>
						<control type="image">
							<left>10</left>
							<top>10</top>
							<width>255</width>
							<height>255</height>
							<texture fallback="DefaultAudio.png" background="true">$VAR[ShiftThumbVar]</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
							<aspectratio>scale</aspectratio>
